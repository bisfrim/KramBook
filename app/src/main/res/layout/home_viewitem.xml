<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/deal_imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:background="#F3F3F3"
        android:scaleType="fitXY"
        android:src="@drawable/information" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/deal_imageView"
        android:layout_alignBottom="@+id/deal_imageView"
        android:background="@drawable/black_background_with_overlay"
        android:padding="2dp"
        android:orientation="vertical"
        android:gravity="center_vertical|end">

        <customfonts.MyTextView
            android:id="@+id/person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:text="username"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left">


            <customfonts.MyTextView
                android:id="@+id/book_expire_date"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@android:color/white"
                android:text="15 Dec 2015, at 8:45"
                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/image_online_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/deal_imageView"
                android:layout_alignTop="@+id/deal_imageView"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
